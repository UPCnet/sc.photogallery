<html
   xmlns="http://www.w3.org/1999/xhtml"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="sc.photogallery">
  <body tal:define="is_empty nocall:view/is_empty">
    <p tal:condition="python:is_empty and view.is_compose_mode()">
      Drag&amp;drop a Photo Gallery here.
    </p>
    <div class="photogallery photogallery-tile tile-content"
         tal:condition="not:is_empty"
         tal:define="description view/data/description|nothing"
         tal:attributes="id string:photogallery-${view/id}">
      <div class="swiper-container gallery-top"
             tal:condition="not:is_empty"
             tal:attributes="id string:photogallery-${view/id}">
        <div class="swiper-wrapper">
          <tal:items repeat="item view/results">
            <div class="swiper-slide">
              <div class="swiper-player aspect-16-9">
                <div class="swiper-image-wrapper">
                  <tal:image define="image python:view.image(item)">
                    <img tal:attributes="alt item/Title;
                                         height image/height;
                                         src image/url;
                                         width image/width">
                  </tal:image>
                </div>
              </div>
              <div class="swiper-information">
                <div class="swiper-information-wrapper">
                  <div class="swiper-rights"
                       tal:content="python:view.get_media_producer(item)">
                    Cr√©dito Foto / RBA
                  </div>
                  <div class="swiper-title">
                    <a tal:attributes="href item/absolute_url"
                       tal:content="item/Title" />
                  </div>
                  <div class="swiper-descriptionn"
                       tal:content="item/Description" />
                </div>
                <div class="slide-pagination">
                  <span class="slide-num" tal:content="repeat/item/number" /> |
                  <span class="slide-count" tal:content="repeat/item/length" />
                </div>
              </div>
            </div>
          </tal:items>
        </div>
        <div class="swiper-button-next swiper-button-white"></div>
        <div class="swiper-button-prev swiper-button-white"></div>
      </div>
      <div class="swiper-container gallery-thumbs"
           tal:condition="not:is_empty"
           tal:attributes="id string:photogallery-${view/id}">
        <div class="swiper-wrapper">
          <tal:items repeat="item view/results">
            <div class="swiper-slide">
              <tal:image define="thumbnail python:view.image(item, scale='thumb')"
                         condition="thumbnail">
                <img tal:attributes="alt item/Title;
                                     height thumbnail/height;
                                     src thumbnail/url;
                                     width thumbnail/width">
              </tal:image>
            </div>
          </tal:items>
        </div>
      </div>
    </div>
  </body>
</html>
